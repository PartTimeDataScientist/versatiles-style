{
    "env": {
        "browser": true,
        "es2023": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "**/*.js",
        "dist/**"
    ],
    "lib": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "root": true,
    "rules": {
        "indent": [
            "warn",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "no-extra-semi": [
            "warn"
        ],
        "@typescript-eslint/no-explicit-any": [
            "off"
        ]
    }
}