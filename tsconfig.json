{
	"compilerOptions": {
		"lib": [
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"allowImportingTsExtensions": false,
		"noEmit": true,
		"sourceMap": true,
	},
	"include": [
		"rollup.config.*",
		"scripts/**/*.ts",
		"src/**/*.ts"
	]
}